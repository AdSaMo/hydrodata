                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imgSaltoVertical"
                android:text="Altura del obstáculo (H)"
                tools:layout_editor_absoluteY="389dp" />

            <EditText
                android:id="@+id/etAlturaObstaculo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvAlturaObstaculo"
                android:ems="10"
                android:inputType="textPersonName"
                 />
            <TextView
                android:id="@+id/tvAlturaSalto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etAlturaObstaculo"
                android:text="Altura del salto (S)"
                tools:layout_editor_absoluteY="389dp" />

            <EditText
                android:id="@+id/etAlturaSalto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvAlturaSalto"
                android:ems="10"
                android:inputType="textPersonName"
                 />

            <TextView
                android:id="@+id/tvProfundidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etAlturaSalto"
                android:text="Profundidad de la poza a pie de azud (P)"
                tools:layout_editor_absoluteY="389dp" />

            <EditText
                android:id="@+id/etProfundidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvProfundidad"
                android:ems="10"
                android:inputType="textPersonName"
                 />
            <TextView
                android:id="@+id/tvAnchuraCoronacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etProfundidad"
                android:text="Anchura en coronación (W)"
                tools:layout_editor_absoluteY="389dp" />

            <EditText
                android:id="@+id/etAnchuraCoronacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvAnchuraCoronacion"
                android:ems="10"
                android:inputType="textPersonName"
                 />
            <TextView
                android:id="@+id/tvLongitudCoronacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etAnchuraCoronacion"
                android:text="Longitud en coronación (L)"
                tools:layout_editor_absoluteY="389dp" />

            <EditText
                android:id="@+id/etLongitudcoronacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvLongitudCoronacion"
                android:ems="10"
                android:inputType="textPersonName"
                 />

            <TextView
                android:id="@+id/tvAlturaLamina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etLongitudcoronacion"
                android:text="Altura de la lámina en coronación (A)"
                tools:layout_editor_absoluteY="389dp" />

            <EditText
                android:id="@+id/etAlturaLamina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvAlturaLamina"
                android:ems="10"
                android:inputType="textPersonName"
                 />

            <CheckBox
                android:id="@+id/cbPasoEntubado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/ivPasoEntubado"
                android:text="Paso entubado"
                app:layout_constraintTop_toTopOf="@id/ivPasoEntubado"
                app:layout_constraintBottom_toBottomOf="@id/ivPasoEntubado"
                tools:layout_editor_absoluteY="241dp" />

            <ImageView
                android:id="@+id/ivPasoEntubado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:src="@drawable/paso_entubado"
                app:layout_constraintStart_toEndOf="@id/cbPasoEntubado"
                app:layout_constraintTop_toBottomOf="@id/etAlturaLamina" />
            <TextView
                android:id="@+id/tvVelocidadCorriente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivPasoEntubado"
                android:text="Velocidad de la corriente (V)"
                tools:layout_editor_absoluteY="389dp" />

            <EditText
                android:id="@+id/etVelocidadCorriente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvVelocidadCorriente"
                android:ems="10"
                android:inputType="textPersonName"
                 />
            <TextView
                android:id="@+id/tvDiametroPaso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etVelocidadCorriente"
                android:text="Diámetro del paso"
                tools:layout_editor_absoluteY="389dp" />

            <EditText
                android:id="@+id/etDiametroPaso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDiametroPaso"
                android:ems="10"
                android:inputType="textPersonName"
                 />

            <TextView
                android:id="@+id/tvAlturaPaso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etDiametroPaso"
                android:text="Altura de la Lámina en el paso (A)"
                tools:layout_editor_absoluteY="389dp" />

            <EditText
                android:id="@+id/etAlturaPaso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvAlturaPaso"
                android:ems="10"
                android:inputType="textPersonName"
                 />
            <TextView
