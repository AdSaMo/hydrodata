                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvAlturaSaltoParamento"
                android:ems="10"
                android:inputType="textPersonName"
                 />

            <TextView
                android:id="@+id/tvProfundidadParamento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etAlturaSaltoParamento"
                android:text="Profundidad de la poza al pie del azud (P)"
                tools:layout_editor_absoluteY="389dp" />

            <EditText
                android:id="@+id/etProfundidadParamento"
                android:layout_width="wrap_content"
