            <EditText
                android:id="@+id/etLongitudPaso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvLongitudPaso"
                android:ems="10"
                android:inputType="textPersonName"
                 />
            <TextView
                android:id="@+id/tvLongitudCoronacionPasoEntubado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etLongitudPaso"
                android:text="Longitud en coronación (L)"
                tools:layout_editor_absoluteY="389dp" />

            <EditText
                android:id="@+id/etLongitudCoronacionPasoEntubado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvLongitudCoronacionPasoEntubado"
                android:ems="10"
                android:inputType="textPersonName"
                 />


            <CheckBox
                android:id="@+id/cbPasoParamento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/ivPasoParamento"
                android:text="Paso sobre paramento"
                app:layout_constraintTop_toTopOf="@id/ivPasoParamento"
                app:layout_constraintBottom_toBottomOf="@id/ivPasoParamento"
                tools:layout_editor_absoluteY="241dp" />

            <ImageView
                android:id="@+id/ivPasoParamento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:src="@drawable/paso_sobre_paramento"
                app:layout_constraintStart_toEndOf="@id/cbPasoParamento"
                app:layout_constraintTop_toBottomOf="@id/etLongitudCoronacionPasoEntubado" />

            <TextView
                android:id="@+id/tvAlturaObstaculoParamento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivPasoParamento"
                android:text="Altura del obstáculo(H)"
                tools:layout_editor_absoluteY="389dp" />

            <EditText
                android:id="@+id/etAlturaObstaculoParamento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
